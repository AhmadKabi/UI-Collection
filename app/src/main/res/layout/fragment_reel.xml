<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@color/black_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCapture"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_capture"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLove"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/txLove"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound"
        app:srcCompat="@drawable/ic_love"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="1.5M"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/imgComment"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgComment"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/txComment"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound"
        app:srcCompat="@drawable/ic_comment"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="4,532"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/imgShare"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgShare"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/txShare"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound"
        app:srcCompat="@drawable/ic_share"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="11.4K"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/imgMore"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMore"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@id/imgSound"
        app:layout_constraintEnd_toEndOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="@id/imgSound"
        app:srcCompat="@drawable/ic_more"
        app:tint="@color/white" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgSound"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgCapture"
        app:shapeAppearanceOverlay="@style/RoundedCorner"
        app:srcCompat="@drawable/cat_1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/txCaption"
        app:layout_constraintStart_toStartOf="@id/txCaption"
        app:shapeAppearanceOverlay="@style/Circular"
        app:srcCompat="@drawable/cat_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Run boy, run ..."
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txSound"
        app:layout_constraintStart_toStartOf="@id/txSound" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_corner30_grey_overlay"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:text="Sound Instagram Orchestra - Plup Fiction"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgSound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgSound" />

</androidx.constraintlayout.widget.ConstraintLayout>
